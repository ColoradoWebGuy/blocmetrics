<div class="col-lg-8 col-lg-offset-2">
<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <div class="well bs-component">
  <%= devise_error_messages! %>

  <div class="row">
  <%= form_group_tag(resource.errors[:email]) do %>
    <%= f.label :email, class: "col-lg-2 control-label" %>
    <div class="col-lg-10">
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
  <% end %>
  </div>

  <div class="row top-buffer">
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Resend confirmation instructions", class: "btn btn-info" %>
      </div>
    </div>
  </div>

  </div>
<% end %>

<%= render "devise/shared/links" %>
<br />

</div>
