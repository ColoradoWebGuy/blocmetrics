<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <br />

    <div class="flash">
      <% if notice %>
      <div class="alert alert-dismissible alert-info">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <%= notice %>
      </div>
      <% elsif alert %>
      <div class="alert alert-dismissible alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        <%= alert %>
      </div>
      <% end %>
    <div>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <!-- link_to -->
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <div class="login">
                  Signed in as: <strong><%= current_user.email %></strong> |
                  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                </div>
              </li>
            <% else %>
              <li><div class="login"><%= link_to "Sign up", new_user_registration_path %> | <%= link_to "Sign in", new_user_session_path %></div></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <%= yield %>

  </div>
</body>
</html>
