<div class="row">
  <div class="col-md-8 col-md-offset-2 ">

    <h1>Listing of Web Applications</h1>

    <div class="well">
      <div class="table-responsive">
        <table class="table table-striped table-hover table-condensed">
          <thead>
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Url</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>

          <tbody>
            <% @registered_applications.each do |registered_application| %>
              <tr>
                <td><strong><%= link_to registered_application.name , registered_application, class: "btn btn-block" %></strong></td>
                <td><%= link_to registered_application.url, registered_application, class: "btn btn-block" %></td>
                <td>
                  <div class="text-center">
                    <%= link_to registered_application, class: "btn btn-info", data: { toggle: 'tooltip', placement: 'top', original_title: 'Show'} do %>
                        <%= fa_icon "pie-chart" %>
                    <% end %>

                    <%= link_to edit_registered_application_path(registered_application), class: "btn btn-warning", data: { toggle: 'tooltip', placement: 'top', original_title: 'Edit'} do %>
                        <%= fa_icon "pencil" %>
                    <% end %>

                    <%= link_to registered_application, method: :delete, data: { confirm: 'Are you sure?', toggle: 'tooltip', placement: 'top', original_title: 'Destroy'}, class: "btn btn-danger" do %>
                        <%= fa_icon "trash" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <%= link_to 'Register a New Application', new_registered_application_path, class: "btn btn-default pull-right" %>

  </div>
</div>
